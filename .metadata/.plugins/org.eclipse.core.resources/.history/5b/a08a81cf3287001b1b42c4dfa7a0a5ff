package com.skill.caog.assig8;
import java.util.Scanner;
import java.util.Comparator;

class SortOnId implements Comparator<Employee>{

	@Override
	public int compare(Employee o1, Employee o2) {
		
	        return o1.getEmployId() -o2.getEmployId();
	    }
		
}

class SortOnName implements Comparator<Employee>{

	@Override
	public int compare(Employee o1, Employee o2) {
		
	        return o1.getName().compareTo(o2.getName());
	    }
		
}

class SortOnSalary implements Comparator<Employee>{

	@Override
	public int compare(Employee o1, Employee o2) {
		
	        return o1.getSalary() - o2.getSalary();
	    }
		
}
