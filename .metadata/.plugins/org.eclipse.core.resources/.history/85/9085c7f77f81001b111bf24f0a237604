package com.skill.capg.assig6;
import java.util.*;
public class PlayerBO {
	String name;
	String country;
	String skill;
	PlayerBO(){
		
	}
	PlayerBO(String name, String country, String skill){
		this.name=name;
		this.country=country;
		this.skill=skill;
		
	}
	public String getName() {
		return name;
	}
	public void setName(String name) {
		this.name = name;
	}
	public String getCountry() {
		return country;
	}
	public void setCountry(String country) {
		this.country = country;
	}
	public String getSkill() {
		return skill;
	}
	public void setSkill(String skill) {
		this.skill = skill;
	}
	void displayAllPlayerDetails(ArrayList<PlayerBO> players) {
		for (PlayerBO p1:players) {
			System.out.print(p1.getName());
			System.out.print(p1.getCountry());
			System.out.println(p1.getSkill());
		}
	}
}
class Main{
	public static void main() {
		PlayerBO p1= new PlayerBO();
		ArrayList<p1> players=new ArrayList<p1>();
		String[] details =new String[3];
		Scanner sc= new Scanner(System.in);
		System.out.println("Enter the no. of players:");
		int n = sc.nextInt();
		
		for (int i =0; i<n;i++) {
			System.out.println("Enter the name of players:");
			p1.setName(sc.next());
			System.out.println("Enter the country of players:");
			p1.setCountry(sc.next());
			System.out.println("Enter the skill of players:");
			p1.setSkill(sc.next());
			
			players.add(p1);
		}
		
		displayAllPlayerDetails();
		
	}
	
	
}
