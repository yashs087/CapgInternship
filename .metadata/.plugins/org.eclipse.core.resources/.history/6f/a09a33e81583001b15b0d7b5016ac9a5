	private Customer register() {

		
		System.out.println("Enter customer id,name,email,phone,address:");
		id = scanner.nextLong();
		name = scanner.next();
		email = scanner.next();
		phone = scanner.nextLong();
		address = scanner.next();
		return new Customer(id, name, email, phone, address);
