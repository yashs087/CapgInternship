package com.skill.capg.assig6.player;

import java.util.ArrayList;
import java.util.Scanner;

public class Main {
	public static void main(String[] args) {
		
		Player p1= new Player();
		ArrayList<Player> players=new ArrayList<Player>();
		Scanner sc= new Scanner(System.in);
		System.out.println("Enter the no. of players:");
		int n = sc.nextInt();
		
		for (int i =0; i<n;i++) {
			System.out.println("Enter the name of players:");
			p1.setName(sc.next());
			System.out.println("Enter the country of players:");
			p1.setCountry(sc.next());
			System.out.println("Enter the skill of players:");
			p1.setSkill(sc.next());
			
			players.add(p1);
			
		}
		
		
		PlayerBO p=new PlayerBO();
		p.displayAllPlayerDetails(players);
		sc.close();
	}
}
